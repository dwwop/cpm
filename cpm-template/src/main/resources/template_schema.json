{
  "type": "object",
  "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:TraversalInformation",
  "properties": {
    "prefixes": {
      "type": "object",
      "required": true,
      "description": "The namespace declarations",
      "additionalProperties": {
        "type": "string"
      }
    },
    "mainActivity": {
      "type": "object",
      "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:MainActivity",
      "required": true,
      "description": "The main activity of the traversal information part",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_]+:(.*)$",
          "required": true,
          "description": "The identifier of the activity"
        },
        "startTime": {
          "type": "string",
          "description": "The start time of the activity",
          "format": "date-time"
        },
        "endTime": {
          "type": "string",
          "description": "The end time of the activity",
          "format": "date-time"
        },
        "referencedMetaBundleId": {
          "type": "string",
          "pattern": "^[A-Za-z0-9_]+:(.*)$",
          "description": "The identifier of the meta bundle which is referenced by this activity"
        },
        "hasPart": {
          "type": "array",
          "description": "The identifier of the activities in domain-specific provenance, that are part of this activity",
          "items": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$"
          }
        },
        "used": {
          "type": "array",
          "description": "The identifiers of the backward connectors that are used by this activity",
          "items": {
            "type": "object",
            "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:MainActivityUsed",
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_]+:(.*)$",
                "description": "The identifier of the usage relation"
              },
              "bcId": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_]+:(.*)$",
                "required": true,
                "description": "The identifier of the backward connector"
              }
            }
          }
        },
        "generated": {
          "type": "array",
          "description": "The identifiers of the forward connectors that are generated by this activity",
          "items": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$"
          }
        }
      }
    },
    "bundleName": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_]+:(.*)$",
      "required": true,
      "description": "The bundle's identifier"
    },
    "backwardConnectors": {
      "type": "array",
      "description": "The backward connectors",
      "items": {
        "type": "object",
        "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:BackwardConnector",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "required": true,
            "description": "The identifier of the connector"
          },
          "externalId": {
            "type": "string"
          },
          "referencedBundleId": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "description": "The referenced bundle's identifier"
          },
          "referencedMetaBundleId": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "description": "The referenced meta bundle's identifier"
          },
          "referencedBundleHashValue": {
            "type": "object",
            "id": "urn:jsonschema:java:lang:Object",
            "description": "The referenced bundle's hash value"
          },
          "hashAlg": {
            "type": "string",
            "description": "The referenced bundle's hash value's algorithm",
            "enum": [
              "MD5",
              "SHA1",
              "SHA256",
              "SHA512"
            ]
          },
          "provenanceServiceUri": {
            "type": "string",
            "description": "The URI of the provenance service"
          },
          "derivedFrom": {
            "type": "array",
            "description": "The identifier's of connector's from which this connector is derived from",
            "items": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_]+:(.*)$"
            }
          },
          "attributedTo": {
            "type": "object",
            "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:ConnectorAttributed",
            "description": "The identifier of the agent t which this connector is attributed to",
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_]+:(.*)$",
                "description": "The identifier of the attribution relation"
              },
              "agentId": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_]+:(.*)$",
                "required": true,
                "description": "The identifier of the agent"
              }
            }
          }
        }
      }
    },
    "forwardConnectors": {
      "type": "array",
      "description": "The forward connectors",
      "items": {
        "type": "object",
        "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:ForwardConnector",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "required": true,
            "description": "The identifier of the connector"
          },
          "externalId": {
            "type": "string"
          },
          "referencedBundleId": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "description": "The referenced bundle's identifier"
          },
          "referencedMetaBundleId": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "description": "The referenced meta bundle's identifier"
          },
          "referencedBundleHashValue": {
            "type": "object",
            "$ref": "urn:jsonschema:java:lang:Object",
            "description": "The referenced bundle's hash value"
          },
          "hashAlg": {
            "type": "string",
            "description": "The referenced bundle's hash value's algorithm",
            "enum": [
              "MD5",
              "SHA1",
              "SHA256",
              "SHA512"
            ]
          },
          "provenanceServiceUri": {
            "type": "string",
            "description": "The URI of the provenance service"
          },
          "derivedFrom": {
            "type": "array",
            "description": "The identifier's of connector's from which this connector is derived from",
            "items": {
              "type": "string",
              "pattern": "^[A-Za-z0-9_]+:(.*)$"
            }
          },
          "attributedTo": {
            "type": "object",
            "$ref": "urn:jsonschema:cz:muni:fi:cpm:template:schema:ConnectorAttributed",
            "description": "The identifier of the agent t which this connector is attributed to"
          },
          "specializationOf": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "description": "The identifier of the connector of which this connector is a specialisation of"
          }
        }
      }
    },
    "senderAgents": {
      "type": "array",
      "description": "The sender agents",
      "items": {
        "type": "object",
        "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:SenderAgent",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "required": true,
            "description": "The identifier of the agent"
          },
          "contactIdPid": {
            "type": "string"
          }
        }
      }
    },
    "receiverAgents": {
      "type": "array",
      "description": "The receiver agents",
      "items": {
        "type": "object",
        "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:ReceiverAgent",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "required": true,
            "description": "The identifier of the agent"
          },
          "contactIdPid": {
            "type": "string"
          }
        }
      }
    },
    "identifierEntities": {
      "type": "array",
      "description": "The identifier entities",
      "items": {
        "type": "object",
        "id": "urn:jsonschema:cz:muni:fi:cpm:template:schema:IdentifierEntity",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_]+:(.*)$",
            "required": true,
            "description": "The identifier of the entity"
          },
          "externalId": {
            "type": "string",
            "description": "The external identifier"
          },
          "externalIdType": {
            "type": "string",
            "description": "The type of the external identifier"
          },
          "comment": {
            "type": "string",
            "description": "A comment"
          }
        }
      }
    }
  }
}